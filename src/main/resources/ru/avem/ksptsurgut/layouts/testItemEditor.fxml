<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" stylesheets="@../styles/main_css.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.avem.ksptsurgut.controllers.TestItemEditorController">
    <children>
      <VBox spacing="16.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Для создания нового объекта введите необходимые параметры">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="77.0" prefWidth="1367.0">
               <children>
                  <TextArea editable="false" prefHeight="200.0" prefWidth="200.0" text="Введите тип объекта испытания" wrapText="true" />
                  <TextArea editable="false" layoutX="594.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" text="Высокое напряжение, необходимо, чтоб это значение было больше     U HH" wrapText="true" />
                  <TextArea editable="false" layoutX="694.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" text="Низкое напряжение" wrapText="true" />
                  <TextArea editable="false" layoutX="794.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" stylesheets="@../styles/main_css.css" text="Мощность " wrapText="true" />
                  <TextArea editable="false" layoutX="894.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" text="Ток холостого хода в %" wrapText="true" />
                  <TextArea editable="false" layoutX="994.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" text="Напряжение короткого замыкания в %" wrapText="true" />
                  <TextArea editable="false" layoutX="1094.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" text="Время холостого хода" wrapText="true" />
                  <TextArea editable="false" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" text="Напряжение для проверки сопротивления обмотки изоляции Мегаомметра " wrapText="true" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="27.0" prefWidth="1367.0">
               <children>
                  <TextField fx:id="textTestItemType" alignment="CENTER" prefWidth="200.0" promptText="Тип" />
                  <TextField fx:id="textTestItemUBH" alignment="CENTER" prefWidth="200.0" promptText="U ВН, В" />
                  <TextField fx:id="textTestItemUHH" alignment="CENTER" prefWidth="200.0" promptText="U HН, В" />
                  <TextField fx:id="textTestItemP" alignment="CENTER" prefWidth="200.0" promptText="P, кВА" />
                  <TextField fx:id="textTestItemIxx" alignment="CENTER" prefWidth="200.0" promptText="I хх, %" />
                  <TextField fx:id="textTestItemUkz" alignment="CENTER" prefWidth="200.0" promptText="U КЗ, %" />
                  <TextField fx:id="textTestItemXXTime" alignment="CENTER" prefWidth="200.0" promptText="ХХ, с" />
                  <TextField fx:id="textTestItemUMeger" alignment="CENTER" layoutX="1224.0" layoutY="10.0" prefWidth="200.0" promptText="U Мегаомметр, В" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="16.0">
               <children>
                      <JFXButton buttonType="RAISED" defaultButton="true" mnemonicParsing="false" onAction="#handleTestItemAdd" text="Добавить" />
                      <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#handleTestItemDelete" text="Удалить" />
               </children>
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </HBox>
            <TableView fx:id="tableTestItems" editable="true" prefHeight="393.0" prefWidth="1367.0">
               <placeholder>
                  <Label text="Добавьте объекты испытания" />
               </placeholder>
               <columns>
                  <TableColumn fx:id="columnTestItemType" text="Тип" />
                  <TableColumn fx:id="columnTestItemUBH" text="U ВН, В" />
                  <TableColumn fx:id="columnTestItemUHH" text="U НН, В" />
                  <TableColumn fx:id="columnTestItemP" text="P, кВА" />
                  <TableColumn fx:id="columnTestItemIxx" text="I хх, %" />
                  <TableColumn fx:id="columnTestItemUkz" text="U КЗ, %" />
                  <TableColumn fx:id="columnTestItemXXTime" text="ХХ, с" />
                  <TableColumn fx:id="columnTestItemUMeger" text="U Мегаомметра, В" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </VBox>
    </children>
</AnchorPane>
