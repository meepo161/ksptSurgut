<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="root" prefHeight="618.0" prefWidth="1200.0" stylesheets="@../styles/main_css.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.avem.ksptamur.controllers.ProtocolEditorController">
    <children>
      <VBox prefHeight="618.0" prefWidth="1200.0" spacing="16.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                    <TextField fx:id="filterField" promptText="Фильтр" />
               </children>
            </HBox>
              <TableView fx:id="tableProtocols" prefHeight="500.0" prefWidth="1200.0">
                  <placeholder>
                      <Label text="Нет данных" />
                  </placeholder>
                  <columns>
                      <TableColumn fx:id="columnProtocolID" prefWidth="118.0" resizable="false" text="№ п/п" />
                      <TableColumn fx:id="columnProtocolSerialNumber" prefWidth="300.0" resizable="false" text="Заводской номер" />
                      <TableColumn fx:id="columnProtocolDate" prefWidth="140.0" resizable="false" text="Дата" />
                      <TableColumn fx:id="columnProtocolTime" prefWidth="140.0" resizable="false" text="Время" />
                      <TableColumn fx:id="columnProtocolFullName1" prefWidth="250.0" resizable="false" text="ФИО1" />
                      <TableColumn fx:id="columnProtocolFullName2" prefWidth="250.0" resizable="false" text="ФИО2" />
                  </columns>
                  <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
              </TableView>
            <HBox alignment="CENTER" spacing="16.0">
               <children>
                      <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#handleProtocolOpen" text="Открыть" />
                      <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#handleProtocolSaveAs" text="Сохранить как..." />
                      <JFXButton buttonType="RAISED" alignment="TOP_LEFT" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleProtocolDelete" text="Удалить" />
               </children>
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </VBox>
    </children>
</AnchorPane>
